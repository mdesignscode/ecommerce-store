{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@models": [
        "./models/*"
      ],
      "@/styles/*": [
        "./app/styles/*"
      ],
      "@/hooks/*": [
        "./app/hooks/*"
      ],
      "@/Skeletons/*": [
        "./app/Components/Skeletons/*"
      ],
      "@/Components/*": [
        "./app/Components/*"
      ],
      "@/actions/*": [
        "./app/actions/*"
      ],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "types.d.ts"],
  "exclude": ["node_modules"]
}
